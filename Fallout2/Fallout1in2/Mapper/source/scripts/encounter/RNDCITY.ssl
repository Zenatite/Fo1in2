procedure map_enter_p_proc begin
   Lighting;

   if (map_first_run) then begin
      // Array is top left of crossroad, ruined house, crossroad center
      dude_pos := [20100, 16716, 22092]; // default pos
      dude_rot := random(0, 5);

      // Position fixes for non-vanilla maps
      if (CUR_MAP_CITY2 or CUR_MAP_CITY3) then begin
         dude_pos := [19501, 17719, 19300];
      end
      else if CUR_MAP_CITY4 then begin
         dude_pos := [20100, 16716, 22293];
      end
      else if CUR_MAP_CITY5 then begin
         dude_pos := [20100, 18316, 19900];
      end
      dude_pos := array_random_value(dude_pos);

      override_map_start_hex(dude_pos, 0, dude_rot);
   end
   Critter_spawn_hex := dude_tile;

   if (global_var(GVAR_LOAD_MAP_INDEX) != 1) and (map_first_run) then begin
      Ranger_rerolls := dude_perk(PERK_ranger);
      set_global_var(GVAR_ENEMY_RANDOM_ENC, 0);

      while (Encounter_Num == 0) do begin
         call roll_encounter;
      end

      if (global_var(GVAR_WORLDMAP_TABLE) == 9) or (global_var(GVAR_WORLDMAP_TABLE) == 10) then begin
         call Necrop_table;// Same as Desert
      end
      else if (global_var(GVAR_WORLDMAP_TABLE) == 11) then begin
         call Vats_table;// Same as Desert
      end
      else begin
         call City_table;
      end
   end
   set_global_var(GVAR_LOAD_MAP_INDEX, 0);
end

