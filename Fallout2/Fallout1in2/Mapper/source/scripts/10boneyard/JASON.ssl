procedure talk_p_proc begin
   dude_look_at_self;
   start_gdialog(382, self_obj, 4, -1, -1);
   gsay_start;
   if (CUR_MAP_LARIPPER) then begin
      if (following) then begin
         call Jason23;
      end
      else begin
         call Jason19;
      end
   end
   if (local_var(0)) then begin
      call Jason18;
   end
   else begin
      if (local_var(1)) then begin
         call Jason16;
      end
      else begin
         call Jason01;
      end
   end
   gsay_end;
   end_dialogue;
end

