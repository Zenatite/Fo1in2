   NOption(108, GizGuard03, 4);//{108}{}{Hey, can I ask you a few questions?}
   NOption(109, GizGuard04, 4);//{109}{}{Can you spare a few caps?}
   NOption(110, GizGuardEnd, 4);//{110}{}{Nevermind, sorry.}
   BLowOption(111, GizGuard08);//{111}{}{Uuuh?}
end

